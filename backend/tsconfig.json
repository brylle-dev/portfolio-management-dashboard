{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler", // or "node16" if older Node
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "baseUrl": "./src",
  "paths": {
    "@/*": [
      "*"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "prisma",
    "prisma.config.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}